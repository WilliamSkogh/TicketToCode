@page "/events"
@using MyBlazorApp.Components
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject HttpClient Http
@attribute [Authorize]

<video autoplay muted loop playsinline class="event-bg-video">
    <source src="Videos/goofyahhrave.mp4" type="video/mp4" />
    Din webbl√§sare st√∂der inte videouppspelning.
</video>

<div class="video-overlay"></div>

<head>
    <link rel="stylesheet" href="css/Events.css">
    <link rel="stylesheet" href="css/Background.css">
</head>

<h1>Kommande Evenemang</h1>

@if (events == null)
{
    <p>Laddar evenemang...</p>
}
else if (!events.Any())
{
    <p>Inga evenemang att visa.</p>
}
else
{
    
<div class="event-container">
    @foreach (var evt in events)
    {
    <EventCard
        Title="@evt.Name"
        Description="@evt.Description"
        Start="@evt.Start"
        End="@evt.End"
        MaxAttendees="@evt.MaxAttendees"/>
    }
    </div>
}


@code {
    private List<EventDto> events = new();

   protected override async Task OnInitializedAsync()
{
    try
    {
        Console.WriteLine("üîÑ H√§mtar evenemang...");
        var response = await Http.GetAsync("http://localhost:5235/events");

        if (response.IsSuccessStatusCode)
        {
            events = await response.Content.ReadFromJsonAsync<List<EventDto>>();
            Console.WriteLine($"‚úÖ {events.Count} evenemang h√§mtade!");
        }
        else
        {
            Console.WriteLine($"‚ùå Fel vid h√§mtning av evenemang: {response.StatusCode}");
        }
    }
    catch (Exception ex)
    {
        Console.WriteLine($"‚ùå Fel vid h√§mtning av evenemang: {ex.Message}");
    }
}


    public class EventDto
    {
        public int Id { get; set; }
        public required string Name { get; set; }
        public required string Description { get; set; }
        public int Type { get; set; }
        public DateTime Start { get; set; }
        public DateTime End { get; set; }
        public int MaxAttendees { get; set; }
    }
}
